<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tecsol.taskmanager.AddTaskActivity"
    android:background="#01cecece">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:hint="Enter Title"/>

    <EditText
        android:id="@+id/text_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:editable="false"
        android:hint="Select Date">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_time"
        android:layout_below="@+id/text_date"
        android:layout_alignParentStart="true"
        android:hint="Enter Time"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_location"
        android:layout_below="@+id/text_time"
        android:layout_centerHorizontal="true"
        android:hint="Enter Location"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/text_description"
        android:layout_below="@+id/text_location"
        android:layout_alignParentStart="true"
        android:hint="Enter Description"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button_save"
        android:layout_below="@+id/text_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <ImageButton

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/text_date"
        android:layout_alignParentRight="true"
        android:baselineAlignBottom="@+id/text_date"
        android:id="@+id/image_button1"
        android:contentDescription="@string/select_date"
        android:cropToPadding="true"
        android:src="@drawable/icon1"/>

    <ImageButton

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/text_time"
        android:layout_toRightOf="@+id/text_time"
        android:baselineAlignBottom="@+id/text_time"
        android:contentDescription="@string/selecttime"
        android:id="@+id/image_button2"
        android:cropToPadding="true"
        android:src="@drawable/icon2" />

</RelativeLayout>
